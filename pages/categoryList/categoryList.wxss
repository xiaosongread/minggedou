/** 修改默认的navigator点击态 **/
.index_box{
    font-size: 24rpx;
}
.index_box .refresh{
    position: fixed;
    top: 0;
    left: 0;
    line-height: 100rpx;
    width: 100%;
    font-size: 30rpx;
    text-align: center;
    color: #000;
    z-index: -999
}
.index_box .scrollView{
    background: #ecebeb;
}

.index_box .scrollView .categoriesBox{
    display:flex;
    line-height: 80rpx;
    background: #fff;
    border-bottom: 1px solid #ddd;
}
.index_box .scrollView .categoriesBox .categories{
    flex:1;
    text-align: center;
}
.index_box .scrollView .categoriesBox .nowCategoriesName{
    color: #23b69a;
}

.index_box .scrollView .scroll-view-item{
    width: 100%;
    padding-bottom: 20rpx;
    line-height: 100rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.index_box .scrollView .scroll-view-item .title{
    font-size: 34rpx;
    font-weight: bold;
    line-height: 60rpx;
    padding: 10rpx 20rpx;
}
.index_box .scrollView .scroll-view-item .flex-articleBar{
    display: flex;
    line-height: 40rpx;
    padding: 4rpx 20rpx 10rpx;
    border-bottom: 1px dashed #ccc;
}
.index_box .scrollView .scroll-view-item .flex-articleBar .icons{
    width: 38rpx;
    height: 38rpx;
    margin:0 8rpx 0 20rpx;
}
.index_box .scrollView .scroll-view-item .flex-articleBar .icons:nth-of-type(1){
    margin:0 15rpx 0 0;
}
.index_box .scrollView .scroll-view-item .articleIntroduction{
    max-height: 100rpx;
    font-size: 28rpx;
    padding: 20rpx;
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
}